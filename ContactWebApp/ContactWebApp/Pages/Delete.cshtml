@page
@model ContactWebApp.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete";
}
<div>
    @if (Model.ContactModels == null)
    {
        <h1 class="text-danger">Contact Not Found</h1>
    }
    else
    {
        <form method="post">
            <input type="hidden" asp-for="ContactModels.Id" />
            <h1>@Model.ContactModels.FullName</h1>
            <table class="table table-striped">
                <tr>
                    <th>Company</th>
                    <td>@Model.ContactModels.Company</td>
                </tr>
                <tr>
                    <th>Website</th>
                    <td><a href="@Model.ContactModels.Website" class="link-primary" target="_blank">@Model.ContactModels.Website</a></td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>@Model.ContactModels.Title</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>@Model.ContactModels.Phone</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td><a href="mailto:@Model.ContactModels.Email" class="link-primary">@Model.ContactModels.Email</a></td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>@Model.ContactModels.AddressLine1<br>@Model.ContactModels.AddressLine2</td>
                </tr>
            </table>
            <button type="submit" class="btn btn-danger" style="width: 150px;">Delete</button> @* class="btn btn-danger" *@
            <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Cancel</a> @* class="btn btn-secondary" *@
        </form>
    }
</div>
